<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Users</h1>
        
          <p id="notice"><%= notice %></p>
                <div class= "action">
                  <%= link_to 'ユーザー新規作成', new_user_path, class: 'btn-block btn-white' %>
                  <%= link_to '本の検索', books_search_path, class: 'btn-block btn-white' %>
                </div>
                <br>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= link_to 'Show', user %></td>
                  <td><%= link_to '編集', edit_user_path(user) %></td>
                  <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        
      </div>
    </div>
  </div>
</div>
